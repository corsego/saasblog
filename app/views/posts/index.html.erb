<p id="notice"><%= notice %></p>

<h1>Posts</h1>

Total Posts:
<b><%= Post.count %></b>
<br>
Free Posts:
<b><%= Post.free.count %></b>
<br>
Premium Posts:
<b><%= Post.premium.count %></b>
<p>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Content</th>
      <th>Premium</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each_with_index do |post, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= post.title %></td>
        <td><%= truncate(post.content, length: 17) %></td>
        <td><%= post.premium %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
